  "main": "index.js",
  "license": "MIT",
  "private": true,
  "keywords": [
    "cover",
    "blog"
  ],
  "scripts": {
    "build": "pnpm --filter=@flowusx/* run build",
    "preinstall": "npx only-allow pnpm",
