    "eslint-plugin-prettier": "^4.2.1",
    "eslint": "^8.57.0",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.4",
    "prettier": "^2.7.1",
    "typescript": "^5.4.2",
    "@types/node": "^20.12.12"
