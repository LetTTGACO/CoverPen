{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2015",
    "module": "ESNext",
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "emitDeclarationOnly": true,
    "lib": ["dom", "dom.iterable", "ESNext"],
    "jsx": "preserve"
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
